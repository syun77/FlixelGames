<?xml version="1.0" encoding="utf-8" ?>
<data>
  <!-- ■共通定義読み込み -->
  <include id="_ui_globals"/>
  
  <!-- ■強化メニュー -->
  <!-- 最大HP上昇 -->
  <button id="btnhp" label="最大HP +1" x="8" y="96" width="128">
    <text use_def="pixelmplus10" />
    <param type="string" value="btnhp" />
    <tooltip>
      <title use_def="pixelmplus10" text="最大HPを1上昇させます" />
    </tooltip>
  </button>
  <!-- DEX上昇 -->
  <button id="btndex" label="DEX +1" x="btnhp.x" y="btnhp.y+btnhp.height" width="128">
    <text use_def="pixelmplus10" />
    <param type="string" value="btndex" />
    <tooltip>
      <title use_def="pixelmplus10" text="攻撃の命中率が2%上昇します" />
    </tooltip>
  </button>
  <!-- AGI上昇 -->
  <button id="btnagi" label="AGI +1" x="btndex.x" y="btndex.y+btndex.height" width="128">
    <text use_def="pixelmplus10" />
    <param type="string" value="btnagi" />
    <tooltip>
      <title use_def="pixelmplus10" text="敵の攻撃の命中率を2%下がります" />
    </tooltip>
  </button>
  <button id="close" label="戻る" x="btndex.x" y="btnagi.y+btnagi.height" width="64">
    <text use_def="pixelmplus10" />
    <param type="string" value="close" />
  </button>
</data>


<?xml version="1.0" encoding="utf-8" ?>
<data>
  <!-- ■共通定義読み込み -->
  <include id="_ui_globals"/>
  
  <!-- 背景を暗くする -->
  <sprite id="black" x="0" y="0" width="100%" height="100%" color="0x80000000"/>
  <chrome id="back" src="ui/chrome/dark_grey" slice9="4,4,8,8" center_x="true" center_y="true" width="200" height="140"/>		
  
  <!-- タイトル -->
  <text id="title" use_def="pixelmplus10" text="◆獲得アイテム◆" center_x="true" y="back.top+4" />
  <!-- 取得アイテム -->
  <text id="txtitem" use_def="pixelmplus10" text="獲得アイテム" center_x="true" y="title.bottom+4" />
  <!-- 獲得食糧 -->
  <sprite id="sprfood" src="ui/food" x="back.left+72" y="txtitem.bottom" />
  <text use_def="normal" x="sprfood.x+24" y="sprfood.y+12" text="x" />
  <text use_def="normal" id="txtfood" x="sprfood.x+32" y="sprfood.y+12" text="99" size="8" />
  <!-- 獲得したお金 -->
  <sprite id="sprmoney" src="ui/money" x="sprfood.x+8" y="sprfood.bottom" />
  <text use_def="normal" x="sprmoney.x+16" y="sprmoney.y+2" text="x" />
  <text use_def="normal" id="txtmoney" x="sprmoney.x+24" y="sprmoney.y+2" text="99" size="8" />
  <!-- 確認ボタン -->
  <button id="close" label="OK" center_x="true" y="back.bottom-32" width="64">
    <text use_def="pixelmplus10" />
    <param type="string" value="ok" />
  </button>
</data>

